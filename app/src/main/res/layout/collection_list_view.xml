<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/parentCollection"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Example TextView to display some text inside the card -->
        <TextView
            android:id="@+id/CollectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collection Name"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"/>

        <!-- Example TextView for displaying the number of items in the collection -->
        <TextView
            android:id="@+id/NumItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Items: 0"
            android:textSize="14sp"
            android:layout_below="@id/CollectionName"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:paddingTop="5dp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>